<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical"
              android:layout_width="90dp"
              android:layout_height="110dp" android:gravity="center_horizontal">

    <TextView
            android:text="Filtro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/txtFilter" android:gravity="center_horizontal"/>
    <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp" app:srcCompat="@drawable/avatar" android:id="@+id/imgPhotoFilter"
            android:scaleType="centerCrop"/>
</LinearLayout>